<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.samanthaai.alphaback.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/home_banner" />

        <TextView
            android:id="@+id/homepage_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn The Alphabet Backwards Game"
            android:textAlignment="center"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/guessing_game_btn"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Guessing Game"
            android:textSize="20sp" />

        <Button
            android:id="@+id/flash_cards_btn"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Flash Cards"
            android:textSize="20sp" />

        <Button
            android:id="@+id/end_game_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Quit"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(c) Calvin Barajas 2016"
            android:textAlignment="center"
            android:textColor="#B3B3B3"

            />

    </LinearLayout>
</ScrollView>
